@model YTCLLM.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
@section customStyle
{
    @Styles.Render("~/Content/css/accountLogging")
}
<div class="well center-block">
    <hgroup class="center-block">
        <h2 class="text-center">Please sign in</h2>
    </hgroup>
    
    
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
        <h3 class="bg-danger">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
        </h3>

    <div class="row">
        <form>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.UserName, String.Empty, new {@class = "control-label"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Password, String.Empty, new {@class = "control-label"})
            </div>
            <div class="form-group">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new {@class = "control-label"})
                </label>
            </div>
        </form>
        <div class="center-block text-center">
            <input type="submit" value="Sign in" class="btn btn-lg btn-primary" />
            
        </div>
        
    </div>
        <div class="center-block text-center">
       <h3>Please @Html.ActionLink("register", "Register") if you don't have an account.</h3>
       <h4>Or use another service to log in.</h4>
        </div>          
    }

    <section class="social" id="socialLoginForm">
       
        @Html.Action("ExternalLoginsList", new {ReturnUrl = ViewBag.ReturnUrl})
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
