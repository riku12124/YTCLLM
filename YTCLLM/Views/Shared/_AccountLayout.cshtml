<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta lang="english"/>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon"/>
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        @Styles.Render("~/Content/css")
        <link href="@Href("~/Content/sidebar.css")" rel="stylesheet"/>
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("customStyle", required: false)
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required : false)

    </head>
<body>
    <header>
        @RenderPage("~/Views/Shared/_LoginBar.cshtml")
    </header>
    @RenderPage("~/Views/Shared/_AccountSidebar.cshtml")

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a> <!--Toggle Button-->
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    
    
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
